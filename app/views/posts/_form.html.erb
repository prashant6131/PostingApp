<%= form_with model: @post, url: posts_path, local: true do |f| %>
  <h2>Create a New Post</h2>
  
  <div>
    <%= f.label :title %>
    <%= f.text_field :title, required: true %>
  </div>

  <div>
    <%= f.label :text %>
    <%= f.text_area :text, required: true %>
  </div>

  <div>
    <%= f.submit 'Create Post' %>
  </div>
<% end %>

